{
    "openapi": "3.1.0",
    "info": {
        "description": "Note editor API",
        "title": "Swing Notes API",
        "version": "1.0.0"
    },
    "tags": [
      {
        "name": "Notes"
      },
      {
        "name": "User"
      }
    ],
    "paths": {
        "/api/notes": {
          "get": {
            "tags": ["Notes"],
            "description": "Returnera inloggad anv채ndares notes",
            "responses": {
              "200": {
                "description": "Successful operation",
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "properties": {
                        "message": {
                          "type": "string"
                        },
                        "note": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "id": {
                                "type": "string",
                                "description": "The ID of the note."
                              },
                              "title": {
                                "type": "string",
                                "description": "The title of the note."
                              },
                              "text": {
                                "type": "string",
                                "description": "The text content of the note."
                              },
                              "createdAt": {
                                "type": "string",
                                "format": "date-time",
                                "description": "The timestamp when the note was created."
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "post": {
            "tags": ["Notes"],
            "description": "Skapa ny note som inloggad anv채ndare",
            "responses": {
              "201": {
                "description": "Successful operation",
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "properties": {
                        "message": {
                          "type": "string"
                        },
                        "note": {
                          "type": "object",
                          "properties": {
                            "id": {
                                "type": "string",
                                "description": "The ID of the newly created note."
                              },
                            "title": {
                              "type": "string",
                              "description": "The title of the newly created note."
                            },
                            "text": {
                              "type": "string",
                              "description": "The text content of the newly created note."
                            },
                            "createdAt": {
                                "type": "string",
                                "format": "date-time",
                                "description": "The timestamp when the note was created."
                              }
                          }
                        }
                      }
                    }
                  }
                }
              },
              "500": {
                "description": "An error occurred while creating the note",
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "properties": {
                        "error": {
                          "type": "string"
                        }
                    }
                  }
                }
              }
            }
          }
        },
        "put": {
          "tags": ["Notes"],
          "description": "Updatera en note via titel",
          "responses": {
            "201": {
              "description": "Successful operation",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "message": {
                        "type": "string"
                      },
                      "note": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string",
                            "description": "The ID of the updated note."
                          },
                          "title": {
                            "type": "string",
                            "description": "The updated title of the note."
                          },
                          "text": {
                            "type": "string",
                            "description": "The updated text content of the note."
                          },
                          "createdAt": {
                            "type": "string",
                            "format": "date-time",
                            "description": "The timestamp when the note was created."
                          },
                          "modifiedAt": {
                            "type": "string",
                            "format": "date-time",
                            "description": "The timestamp when the note was modified."
                          }
                        },
                        "required": ["id", "title", "text", "modifiedAt"]
                      }
                    }
                  }
                }
              }
            },
            "500": {
              "description": "An error occurred while updating the note",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "error": {
                        "type": "string",
                        "description": "A message indicating the error."
                      }
                    }
                  }
                }
              }
            }
          },
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "oldTitle": {
                      "type": "string",
                      "description": "The current title of the note to be updated."
                    },
                    "newTitle": {
                      "type": "string",
                      "description": "The new title to replace the current title."
                    },
                    "newText": {
                      "type": "string",
                      "description": "The new text content to replace the current text content."
                    }
                  },
                  "required": ["oldTitle", "newTitle", "newText"],
                  "example": {
                    "oldTitle": "Current Title",
                    "newTitle": "Updated Title",
                    "newText": "Updated Text Content"
                  }
                }
              }
            }
          }
        },
    "delete": {
      "tags": ["Notes"],
      "description": "Radera en anv채ndares note via titel",
      "responses": {
        "200": {
          "description": "Successful operation",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string"
                  },
                  "deletedNote": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string",
                        "description": "The ID of the deleted note."
                      },
                      "title": {
                        "type": "string",
                        "description": "The title of the deleted note."
                      },
                      "text": {
                        "type": "string",
                        "description": "The text content of the deleted note."
                      },
                      "createdAt": {
                        "type": "string",
                        "format": "date-time",
                        "description": "The timestamp when the note was created."
                      }
                    },
                    "required": ["id", "title", "text", "createdAt"]
                  }
                },
                "required": ["message", "deletedNote"]
              }
            }
          }
        },
        "500": {
          "description": "An error occurred while deleting the note",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "error": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  },    
  "/api/user/signup": {
    "post": {
      "tags": ["User"],
      "description": "Spara ett nytt anv채ndarkonto i databasen",
      "responses": {
        "200": {
          "description": "Successful operation",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "409": {
          "description": "Conflict - User already exists",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "error": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      },
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "username": {
                  "type": "string",
                  "description": "The username of the new user."
                },
                "password": {
                  "type": "string",
                  "description": "The password of the new user."
                }
              },
              "required": ["username", "password"]
            }
          }
        }
      }
    }
  },
  "/api/user/login": {
    "post": {
      "tags": ["User"],
      "description": "Verifiera anv채ndaren och generera en token",
      "responses": {
        "200": {
          "description": "Successful operation",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "token": {
                    "type": "string",
                    "description": "JWT token for authentication."
                  }
                }
              }
            }
          }
        },
        "401": {
          "description": "Unauthorized - Wrong password or username",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "error": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "404": {
          "description": "Not found - User does not exist",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "error": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      },
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "username": {
                  "type": "string",
                  "description": "The username of the user."
                },
                "password": {
                  "type": "string",
                  "description": "The password of the user."
                }
              },
              "required": ["username", "password"]
            }
          }
        }
      }
    }
  },
  "/api/notes/search": {
    "get": {
      "tags": ["Notes"],
      "description": "S철k efter en note p책 titel via query",
      "parameters": [
        {
          "name": "title",
          "in": "query",
          "description": "The title of the note to search for",
          "required": true,
          "schema": {
            "type": "string"
          }
        }
      ],
      "responses": {
        "200": {
          "description": "Successful operation",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string"
                  },
                  "note": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string",
                        "description": "The ID of the note."
                      },
                      "title": {
                        "type": "string",
                        "description": "The title of the note."
                      },
                      "text": {
                        "type": "string",
                        "description": "The text content of the note."
                      },
                      "createdAt": {
                        "type": "string",
                        "format": "date-time",
                        "description": "The timestamp when the note was created."
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "404": {
          "description": "Note not found",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "500": {
          "description": "Internal Server Error",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
}